{
    "manifest_version": 3,
    "name": "Video Speed Controller",
    "version": "1.0",
    "description": "Change the playback speed of online videos",
    "permissions": ["activeTab"],
    "action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "icons": {
      "48": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  